<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prateek.bimsapp.SummaryFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/relativeLayout4"
        android:layout_alignParentStart="true">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:text="FoodItemKiList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#fff"
            android:id="@+id/foodItemList"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:padding="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/relativeLayout4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:text="Name"
            android:layout_marginTop="12dp"
            android:id="@+id/nameTv"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:text="address"
            android:layout_marginTop="18dp"
            android:id="@+id/addressTv"
            android:layout_below="@+id/nameTv"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:text="remarks"
            android:layout_marginTop="18dp"
            android:id="@+id/remarksTv"
            android:layout_below="@+id/addressTv"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:text="Total"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/remarksTv"
            android:id="@+id/totalTv" />


    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:padding="10dp"
        android:text="Order Now"
        android:background="@color/colorPrimary"
        android:id="@+id/sendOrderFromSummary"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

</RelativeLayout>



</FrameLayout>
